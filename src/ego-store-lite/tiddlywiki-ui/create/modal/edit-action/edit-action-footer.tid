title: $:/plugins/linonetwo/ego-store-lite/tiddlywiki-ui/create/modal/edit-action/edit-action-footer

\procedure lingo-base() $:/plugins/linonetwo/ego-store-lite/language/

<div class="ego-store-lite-create-modal-buttons">
  <$button message="tm-close-tiddler">
    <$action-deletetiddler $tiddler="$:/state/ego-store-lite/editAction"/>
    <<lingo Create/Close>>
  </$button>
  <$button
    message="tm-close-tiddler"
    disabled={{{ [[$:/state/ego-store-lite/editAction]get[draft.title]else[yes]] }}}
  >
    <$action-createtiddler
      $basetitle={{$:/state/ego-store-lite/editAction!!draft.title}}
      $template="$:/state/ego-store-lite/editAction"
      $overwrite="yes"
      tags={{{ [{$:/state/ego-store-lite/editAction}get[tags]enlist-input[]] [[$:/Tags/Gamification/RealityAction]] }}}
    >
      <$action-deletetiddler $tiddler="$:/state/ego-store-lite/editAction"/>
      <$action-deletefield $tiddler=<<createTiddler-title>> draft.title draft.of/>
    </$action-createtiddler>
    <<lingo Create/OK>>
  </$button>
</div>