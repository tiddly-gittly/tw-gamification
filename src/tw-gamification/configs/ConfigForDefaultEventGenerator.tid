title: $:/plugins/linonetwo/tw-gamification/ControlPanel/ConfigForDefaultEventGenerator

\define lingo-base() $:/plugins/linonetwo/tw-gamification/language/

\define completeInit() <$action-setfield tiddler="$:/plugins/linonetwo/tw-gamification/configs/ShowInitialConfigPage" text="no" />

\define single-text-tag-editor()
\whitespace trim
<!-- copy and modify from $:/plugins/linonetwo/intention-tower-knowledge-graph/configs/Tags -->
<div class="tw-gamification-single-text-tag-editor-setting-tags-item">
  <$let
    currentTiddler="$:/plugins/linonetwo/tw-gamification/configs/DefaultEventGeneratorTagsForTask"
    palette={{$:/palette}}
    tempTitle="$:/state/plugins/linonetwo/tw-gamification/configs/DefaultEventGeneratorTagsForTask"
    tabIndex={{$:/config/EditTabIndex}}
    cancelPopups="yes"
  >
    <% if [{$:/plugins/linonetwo/tw-gamification/configs/DefaultEventGeneratorTagsForTask}!match[]] %>
      <$macrocall $name="tag" tag={{$:/plugins/linonetwo/tw-gamification/configs/DefaultEventGeneratorTagsForTask}} />
    <% endif %>

    <$edit-text tiddler=<<tempTitle>> tag="input" field="text" placeholder={{$:/language/EditTemplate/Tags/Add/Placeholder}} />

    <$button>
      <<completeInit>>
      <$action-setfield tiddler=<<currentTiddler>> text={{{ [<tempTitle>get[text]] }}}>
        <$action-setfield tiddler=<<tempTitle>> text="" />
      </$action-setfield>

      {{$:/language/EditTemplate/Tags/Add/Button}}
    </$button>
    
  </$let> 
</div>
\end

;<<translate "ConfigDescription/EnableDefaultEventGenerator">>
:<$checkbox tiddler="$:/plugins/linonetwo/tw-gamification/configs/EnableDefaultEventGenerator" field="text" checked="yes" unchecked="no"> <<translate "ConfigDescription/EnableDefaultEventGenerator/Description">></$checkbox>

<<translate "ConfigDescription/DefaultEventGeneratorTagsForTask">>

<$let currentTiddler="$:/plugins/linonetwo/tw-gamification/configs/DefaultEventGeneratorTagsForTask">
  <<single-text-tag-editor>>
</$let>

